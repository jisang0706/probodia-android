<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.example.probodia.viewmodel.RecordViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.RecordFragment"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/intro_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="무엇을 기록할까요?"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginHorizontal="4dp"
                android:paddingVertical="20dp"
                android:paddingHorizontal="35dp"/>

            <LinearLayout
                android:id="@+id/record_btn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">

                <com.example.probodia.layout.SquareFrameLayout
                    android:id="@+id/record_glucose_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/record_btn_background"
                    android:clickable="true"
                    android:layout_marginHorizontal="5dp">

                    <Button
                        android:id="@+id/record_glucose_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="혈당"
                        android:textSize="14dp"
                        android:drawableTop="@drawable/ic_glucose"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"/>

                </com.example.probodia.layout.SquareFrameLayout>

                <com.example.probodia.layout.SquareFrameLayout
                    android:id="@+id/record_pressure_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/record_btn_background"
                    android:clickable="true"
                    android:layout_marginHorizontal="5dp">

                    <Button
                        android:id="@+id/record_pressure_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="혈압"
                        android:textSize="14dp"
                        android:drawableTop="@drawable/ic_pressure"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"/>

                </com.example.probodia.layout.SquareFrameLayout>

                <com.example.probodia.layout.SquareFrameLayout
                    android:id="@+id/record_medicine_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/record_btn_background"
                    android:clickable="true"
                    android:layout_marginHorizontal="5dp">

                    <Button
                        android:id="@+id/record_medicine_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="투약"
                        android:textSize="14dp"
                        android:drawableTop="@drawable/ic_medicine"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"/>

                </com.example.probodia.layout.SquareFrameLayout>

                <com.example.probodia.layout.SquareFrameLayout
                    android:id="@+id/record_meal_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/record_btn_background"
                    android:clickable="true"
                    android:layout_marginHorizontal="5dp">

                    <Button
                        android:id="@+id/record_meal_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="음식"
                        android:textSize="14dp"
                        android:drawableTop="@drawable/ic_meal"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"/>

                </com.example.probodia.layout.SquareFrameLayout>

            </LinearLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/record_tabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tabTextAppearance="@style/tabTextBold"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/record_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </FrameLayout>
</layout>